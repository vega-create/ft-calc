---
import BaseLayout from '../layouts/BaseLayout.astro';
import SEO from '../components/SEO.astro';
import WebSiteSchema from '../components/WebSiteSchema.astro';
import AdSense from '../components/AdSense.astro';
import { categories, tools, getToolsByCategory } from '../data/tools';
---

<BaseLayout>
  <SEO slot="head"
    title="Free Online Calculators"
    description="Free online calculators for math, finance, health, time, and more. Fast, accurate, no sign-up required. Percentage, tip, BMI, age, loan, GPA calculators and unit converters." />
  <WebSiteSchema slot="head" />

  <!-- Hero -->
  <section class="bg-gradient-to-br from-primary-600 via-primary-700 to-primary-900 text-white">
    <div class="max-w-6xl mx-auto px-4 py-16 md:py-24 text-center">
      <h1 class="text-4xl md:text-6xl font-bold mb-4 tracking-tight">
        Free Online <span class="text-primary-200">Calculators</span>
      </h1>
      <p class="text-lg md:text-xl text-primary-100 max-w-2xl mx-auto mb-8">
        Fast, accurate calculators for everyday math, finance, health, and more. No sign-up required.
      </p>
      <div class="flex flex-wrap justify-center gap-3">
        {categories.map(cat => (
          <a href={`#${cat.id}`}
            class="px-4 py-2 bg-white/10 hover:bg-white/20 rounded-xl text-sm font-medium transition-all backdrop-blur-sm border border-white/10">
            {cat.icon} {cat.name}
          </a>
        ))}
      </div>
    </div>
  </section>

  <div class="max-w-6xl mx-auto px-4 py-12">

    <AdSense slot="top" />

    {/* Tools by Category */}
    {categories.map(cat => {
      const catTools = getToolsByCategory(cat.id);
      return (
        <section id={cat.id} class="mb-16">
          <div class="flex items-center gap-3 mb-6">
            <span class="text-3xl">{cat.icon}</span>
            <h2 class="text-2xl font-bold text-gray-900">{cat.name}</h2>
            <span class="text-sm text-gray-400">{catTools.length} tools</span>
          </div>

          <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
            {catTools.map(tool => (
              <a href={`/${tool.slug}/`}
                class="group bg-white rounded-2xl shadow-sm border border-gray-100 p-6 hover:shadow-md hover:border-primary-200 transition-all duration-200">
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 bg-primary-50 rounded-xl flex items-center justify-center text-xl flex-shrink-0 group-hover:bg-primary-100 transition-colors">
                    {tool.icon}
                  </div>
                  <div>
                    <h3 class="font-semibold text-gray-900 group-hover:text-primary-600 transition-colors mb-1">
                      {tool.name}
                    </h3>
                    <p class="text-sm text-gray-500 leading-relaxed">{tool.description}</p>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </section>
      );
    })}

    <AdSense slot="bottom" />
  </div>
</BaseLayout>
