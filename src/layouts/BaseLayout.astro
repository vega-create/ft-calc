---
import '../styles/global.css';
import Analytics from '../components/Analytics.astro';
import { siteConfig } from '../site.config';
import { categories } from '../data/tools';

interface Props {
  title?: string;
  description?: string;
}

const { title, description } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <Analytics />
  <slot name="head" />
</head>
<body class="min-h-screen flex flex-col">

  <!-- Header -->
  <header class="bg-white border-b border-gray-100 sticky top-0 z-50">
    <div class="max-w-6xl mx-auto px-4 h-16 flex items-center justify-between">
      <a href="/" class="flex items-center gap-2 group">
        <div class="w-9 h-9 bg-primary-600 rounded-xl flex items-center justify-center text-white font-bold text-sm shadow-sm group-hover:bg-primary-700 transition-colors">
          FT
        </div>
        <span class="font-semibold text-gray-900 text-lg hidden sm:block">FreeToolkit <span class="text-primary-600">Calc</span></span>
      </a>

      <nav class="flex items-center gap-1 text-sm">
        <a href="/" class={`px-3 py-2 rounded-lg transition-colors ${currentPath === '/' ? 'bg-primary-50 text-primary-700 font-medium' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'}`}>
          All Tools
        </a>
        <a href="/about/" class={`px-3 py-2 rounded-lg transition-colors ${currentPath === '/about/' ? 'bg-primary-50 text-primary-700 font-medium' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'}`}>
          About
        </a>
        <a href="/blog/" class={`px-3 py-2 rounded-lg transition-colors ${currentPath.startsWith('/blog') ? 'bg-primary-50 text-primary-700 font-medium' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'}`}>
          Blog
        </a>
        <a href="/contact/" class={`px-3 py-2 rounded-lg transition-colors ${currentPath === '/contact/' ? 'bg-primary-50 text-primary-700 font-medium' : 'text-gray-600 hover:text-gray-900 hover:bg-gray-50'}`}>
          Contact
        </a>
      </nav>
    </div>
  </header>

  <!-- Main Content -->
  <main class="flex-1">
    <slot />
  </main>

  <!-- Footer -->
  <footer class="bg-white border-t border-gray-100 mt-16">
    <div class="max-w-6xl mx-auto px-4 py-12">
      <div class="grid md:grid-cols-4 gap-8">
        <!-- Brand -->
        <div>
          <div class="flex items-center gap-2 mb-3">
            <div class="w-8 h-8 bg-primary-600 rounded-lg flex items-center justify-center text-white font-bold text-xs">FT</div>
            <span class="font-semibold text-gray-900">FreeToolkit Calc</span>
          </div>
          <p class="text-sm text-gray-500 leading-relaxed">Free online calculators for everyday math, finance, health, and more. Fast, accurate, no sign-up required.</p>
        </div>

        <!-- Categories -->
        <div>
          <h4 class="font-semibold text-gray-900 mb-3 text-sm">Categories</h4>
          <ul class="space-y-2">
            {categories.map(cat => (
              <li><a href={`/#${cat.id}`} class="text-sm text-gray-500 hover:text-primary-600 transition-colors">{cat.icon} {cat.name}</a></li>
            ))}
          </ul>
        </div>

        <!-- Popular -->
        <div>
          <h4 class="font-semibold text-gray-900 mb-3 text-sm">Popular Tools</h4>
          <ul class="space-y-2">
            <li><a href="/percentage/" class="text-sm text-gray-500 hover:text-primary-600 transition-colors">Percentage Calculator</a></li>
            <li><a href="/tip/" class="text-sm text-gray-500 hover:text-primary-600 transition-colors">Tip Calculator</a></li>
            <li><a href="/bmi/" class="text-sm text-gray-500 hover:text-primary-600 transition-colors">BMI Calculator</a></li>
            <li><a href="/age/" class="text-sm text-gray-500 hover:text-primary-600 transition-colors">Age Calculator</a></li>
            <li><a href="/compound-interest/" class="text-sm text-gray-500 hover:text-primary-600 transition-colors">Compound Interest</a></li>
          </ul>
        </div>

        <!-- Links -->
        <div>
          <h4 class="font-semibold text-gray-900 mb-3 text-sm">Legal</h4>
          <ul class="space-y-2">
            <li><a href="/about/" class="text-sm text-gray-500 hover:text-primary-600 transition-colors">About Us</a></li>
            <li><a href="/contact/" class="text-sm text-gray-500 hover:text-primary-600 transition-colors">Contact</a></li>
            <li><a href="/privacy/" class="text-sm text-gray-500 hover:text-primary-600 transition-colors">Privacy Policy</a></li>
          </ul>
        </div>
      </div>

      <div class="border-t border-gray-100 mt-8 pt-8 text-center text-sm text-gray-400">
        &copy; {new Date().getFullYear()} FreeToolkit. All rights reserved.
      </div>
    </div>
  </footer>

  {/* GTM noscript fallback */}
  {siteConfig.tracking?.gtm && (
    <noscript>
      <iframe src={`https://www.googletagmanager.com/ns.html?id=${siteConfig.tracking.gtm}`}
        height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
  )}
</body>
</html>
