---
interface Props {
  slot?: 'top' | 'after-tool' | 'mid' | 'bottom';
}

import { siteConfig } from '../site.config';

const { slot = 'mid' } = Astro.props;
const { client, enabled } = siteConfig.adsense;
---

{enabled && client && (
  <div class={`adsense-slot adsense-${slot} my-6 text-center`}>
    <ins class="adsbygoogle"
      style="display:block"
      data-ad-client={client}
      data-ad-slot="auto"
      data-ad-format="auto"
      data-full-width-responsive="true"></ins>
    <script is:inline>
      (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
  </div>
)}
